{
  "compilerOptions": {
    "outDir": "./dist/static",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "components": [
        "./src/client/components"
      ],
      "components/*": [
        "./src/client/components/*"
      ],
      "reducers": [
        "./src/client/reducers"
      ],
      "reducers/*": [
        "./src/client/reducers/*"
      ],
      "stores": [
        "./src/client/stores"
      ],
      "stores/*": [
        "./src/client/stores/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "src/server",
    "./*.js",
    "**/*.test.tsx"
  ]
}
